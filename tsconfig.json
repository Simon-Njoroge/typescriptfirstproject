{
  "compilerOptions": {
    
    "target": "ES2022",                                  
    
    "module": "NodeNext",                                
    "rootDir": "./src",                                  
    "outDir": "./dist",                                  
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
